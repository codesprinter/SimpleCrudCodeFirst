@model SC.ViewModel.DepartmentViewModel

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DepartmentID);
    @Html.AntiForgeryToken()
    
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Model.FormTitle</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                
                <div class="form-group">
                    @Html.LabelFor(model => model.DepartmentName, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DepartmentName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DepartmentCode, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.DepartmentCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DepartmentCode)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

